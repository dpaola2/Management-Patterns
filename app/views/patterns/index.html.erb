<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", patterns_path %>
    </li>
  </ol>
</nav>

<%= link_to "New pattern", new_pattern_path, class: "btn btn-primary" %>

<div id="patterns">
  <% @patterns.each do |pattern| %>
    <%= render pattern %>
    <p>
      <%= link_to "Show this pattern", pattern %>
    </p>
  <% end %>
</div>


