<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", patterns_path %>
    </li>
  </ol>
</nav>

<%= link_to "New pattern", new_pattern_path, class: "btn btn-primary" %>

<div id="patterns">
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @patterns.each do |pattern| %>
      <div class="col">
        <%= render "patterns/pattern_small", pattern: pattern %>
      </div>
    <% end %>
  </div>
</div>


